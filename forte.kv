<Raiz>:
    StartScreen:
    StartInfo:
    
<StartScreen>:
    name: 'start'
    MDBoxLayout:
        orientation:'vertical'
        MDTopAppBar:
            title: 'FORTE ENGENHARIA CHECKLIST'
            elevation: 1
            # left_action_items: [["arrow-left-thin", lambda x: app.callback()]]
            right_action_items: [["dots-vertical", lambda x: app.dots()]]
        MDBoxLayout:        
            orientation:'vertical'
            padding: '10dp'
            spacing: '10dp'
            FitImage:
                source:'logo.jpg'
            Label:
                text: 'CHECKLIST PONTE ROLANTE'
                color: 'black'
                pos_hint: {'center_x': 0.5}
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: '10dp'
                md_bg_color: 'gray'
                size_hint: 1, None
                height: self.minimum_height
                MDLabel:
                    text: 'SEM TALHA AUXILIAR'
                    pos_hint: {'left': 1,'center_y': 0.5}
                MDSwitch:
                    id: sw1
                    pos_hint: {'left': 0.5,'center_y': 0.5}
                Widget:
            MDRaisedButton:
                text: 'INFORMAÇÕES INICIAIS'
                on_release: root.parent.current = 'info'
            MDRaisedButton:
                text: 'CHECKLIST PONTE'
            MDRaisedButton:
                text: 'CHECK LIST TALHA'
            MDRaisedButton:
                text: 'PONTOS DIVERGENTES'
            MDRaisedButton:
                text: 'LISTA DE PONTOS DIVERGENTES'
            MDRaisedButton:
                text: 'LIMPAR TODOS REGISTROS'

<MDRaisedButton>:
    pos_hint: {'center_x': 0.5}

<StartInfo>:
    name: 'info'
    MDBoxLayout:
        orientation: 'vertical'
        Button:
            on_press:
                root.parent.change_screen()
        Label: